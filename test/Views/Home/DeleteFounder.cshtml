@model IEnumerable<test.Models.Founder>
@{
    ViewData["Title"] = "Удаление клиентов";

}

<h2>Форма удаления учередителей</h2>

<form method="post" class="form-horizontal" role="form">
    <p>Для продолжения удаления нажмите "Удалить"</p>
    @foreach (var founder in Model)
    {
        @if (ViewBag.FounderID == founder.FounderId)
        {

            <div class="form-group">
                <label for="INN_client" class="col-md-2 control-label">ИНН:</label>
                <label for="INN_client" class="col-md-2 control-label">@founder.INN_founder</label>
            </div>
            <div class="form-group">
                <label for="Name_client" class="col-md-2 control-label">Название организации:</label>
                <label for="Name_client" class="col-md-2 control-label">@founder.Full_name_founder</label>

                <div class="form-group">
                    <label for="Date_added_client" class="col-md-2 control-label">Дата добавления клиента:</label>
                    <label for="Date_added_client" class="col-md-2 control-label">@founder.Date_added_founder</label>
                </div>
                <div class="form-group">
                    <label for="Date_update_client" class="col-md-2 control-label">Дата обновления клиента:</label>
                    <label for="Date_update_client" class="col-md-2 control-label">@founder.Date_update_founder</label>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Удалить" />
                    </div>
                </div>
            </div>}
    }
</form>