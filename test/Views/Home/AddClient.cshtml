@{
    ViewData["Title"] = "Добавление клиентов";
}

<h2>Форма добавления клиентов</h2>

<form method="post" class="form-horizontal" role="form">
    <p>Для добавления учередителя заполните следующие поля:</p>
    <div class="form-group">
        <label for="INN_client" class="col-md-2 control-label">ИНН:</label>
        <div class="col-md-4">
            <input type="text" name="INN_client" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Name_client" class="col-md-2 control-label">Название организации:</label>
        <div class="col-md-4">
            <input type="text" name="Name_client" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Type_client" class="col-md-2 control-label">Тип клиента:</label>
            <div class="col-md-4">
                <input type="text" name="Type_client" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
        </div>
</form>